<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawing_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/drawing_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageView
            android:id="@+id/drawing_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="24dp"
            app:srcCompat="@drawable/menu_close"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/drawing_palette_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="24dp"
            app:srcCompat="@drawable/menu_palette"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/drawing_undo_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="24dp"
            app:srcCompat="@drawable/menu_undo"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/drawing_redo_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="24dp"
            app:srcCompat="@drawable/menu_redo"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/drawing_save_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="24dp"
            app:srcCompat="@drawable/menu_check"
            tools:ignore="contentDescription" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/drawing_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1" />

</LinearLayout>